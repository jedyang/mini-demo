<!--pages/vertical-slider/index.wxml-->
<!-- 自定义竖向slider -->
<view style="height: 400rpx;margin: 20px;display: flex;justify-content: space-around">

  <slider-vertical block-color="#ffffff" block-size="18" backgroundColor="#e9e9e9" activeColor="#1aad19"
    bindchange="slider1change" bindchanging="slider1changing" step="1" min="50" max="200" value="0" disabled="{{false}}"
    show-value="{{true}}"></slider-vertical>

  <slider-vertical block-color="#ffffff" block-size="28" backgroundColor="#e9e9e9" activeColor="#1aad19"
    bindchange="slider1change" bindchanging="slider1changing" step="5" min="50" max="200" value="115"
    disabled="{{false}}" show-value="{{false}}"></slider-vertical>
</view>